<div class="container d-flex justify-content-between align-items-center p-2">
  <h1>Cadastrar Aluno</h1>
</div>

<div class="container">
  <%= form_with(model: @aluno, local: true) do |form| %>
    <div class="field">
      <%= form.label :nome, class: "form-label" %>
      <%= form.text_field :nome, class: "form-control mb-2" %>
    </div>

    <div class="field">
      <%= form.label :data_nascimento, "Data de Nascimento", class: "form-label" %>
      <%= form.date_field :data_nascimento, class: "form-control mb-2" %>
    </div>

    <div class="field">
      <%= form.label :matricula, "MatrÃ­cula", class: "form-label" %>
      <%= form.text_field :matricula, class: "form-control mb-2" %>
    </div>

    <div class="field">
      <%= form.label :turma_id, "Turma", class: "form-label" %>
      <%= form.collection_select :turma_id, Turma.all, :id, lambda { |turma| "#{turma.serie} SÃ©rie - #{turma.nome} " }, { prompt: "Selecione uma turma" }, { class: "form-control mb-2" } %>
    </div>

    <div class="actions gap-2 d-flex justify-content-end mt-3">
      <%= form.submit "Cadastrar", class: "btn btn-primary" %>
      <%= link_to "Voltar", alunos_path, class: "btn btn-secondary" %>
    </div>
  <% end %>

</div>
