<h1>Lista de Alunos</h1>
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data de Nascimento</th>
      <th>Matrícula</th>
      <th>Turma</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.data_nascimento %></td>
        <td><%= aluno.matricula %></td>
        <td><%= aluno.turma.nome if aluno.turma %></td>
        <td>
          <%= link_to "Editar", edit_aluno_path(aluno), class: "btn btn-warning btn-sm" %>
          <%= link_to "Excluir", aluno, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
