<h1>Lista de Alunos</h1>
<%= link_to "Novo Aluno", new_aluno_path, class: "btn btn-primary" %>
<table class="table">
  <thead>
    <tr>
      <th><%= link_to "Nome", alunos_path(order: "nome") %></th>
      <th><%= link_to "Data de Nascimento", alunos_path(order: "data_nascimento") %></th>
      <th><%= link_to "Matrícula", alunos_path(order: "matricula") %></th>
      <th><%= link_to "Turma", alunos_path(order: "turma") %></th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.data_nascimento.strftime("%d/%m/%y") if aluno.data_nascimento %></td>
        <td><%= aluno.matricula %></td>
        <td><%= "#{aluno.turma.serie} #{aluno.turma.nome}" if aluno.turma %></td>
        <td>
          <%= link_to "Editar", edit_aluno_path(aluno), class: "btn btn-warning btn-sm" %>
          <%= link_to "Excluir", aluno, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
