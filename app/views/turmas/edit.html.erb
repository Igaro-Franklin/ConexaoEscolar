<div class="container d-flex justify-content-between align-items-center p-2">
  <h1>Editar Turma</h1>
</div>

<div class="container">
  <%= form_with model: @turma, url: turma_path(@turma), method: :patch, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :serie, "SÃ©rie", class: "form-label" %>
      <%= f.text_field :serie, class: "form-control mb-2" %>
    </div>

    <div class="mb-3">
      <%= f.label :nome, "Nome", class: "form-label"  %>
      <%= f.text_field :nome, class: "form-control mb-2" %>
    </div>

    <div class="mb-3">
      <%= f.label :professor_id, "Prof. Padrinho(a)", class: "form-label"  %>
      <%= f.collection_select :professor_id, Professor.all, :id, :nome, { prompt: "Selecione um professor" }, class: "form-control mb-2" %>
    </div>

    <div class="actions gap-2 d-flex justify-content-end mt-3">
      <%= f.submit "Atualizar", class: "btn btn-success" %>
      <%= link_to "Cancelar", turmas_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
